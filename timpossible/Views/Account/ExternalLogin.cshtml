@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="page-header header-filter" filter-color="purple" style="background-image: url(''); background-position: top center; background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-3">

                <div class="card card-signup" style="padding-bottom: 5rem">
                    <h2 class="card-title text-center">Almost There</h2>
                    <div class="row">

                        <div class="col-md-10 col-md-offset-1">


                            <div class="card-content">

                                <p>
                                    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                                    Please enter an email address for us to remember you with below and click the Register button to finish
                                    logging in.
                                </p>

                            </div>
                            <div class="footer text-center">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="input-group" style="width: 100%">
                                                <label asp-for="Email"></label>
                                                <input asp-for="Email" class="form-control" style="width: 25rem"/>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <button type="submit" class="btn btn-default">Register</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}