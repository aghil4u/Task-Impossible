@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav navbar-nav navbar-right">
        <ul class="nav navbar-nav navbar-right" style="margin-right:1rem">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="material-icons">fingerprint</i> @UserManager.GetUserName(User)
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu dropdown-with-icons">
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                            <i class="material-icons">account_balance</i> Profile
                        </a>
                    </li>
                    <li>
                        <a title="Logout" asp-area="" asp-controller="Account" asp-action="Lockout">
                            <i class="material-icons">lock</i> Logout
                        </a>
                    </li>
                    <li>
                        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                    </li>

                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>

            <a asp-controller="Account" asp-action="Login">
                <i class="material-icons">fingerprint</i> Login / register
            </a>
        </li>
    </ul>
}